<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane
        id="content"
        fx:controller="Launcher"
        xmlns:fx="http://javafx.com/fxml"
        alignment="center" hgap="10" vgap="10">

    <GridPane id="inputbox" alignment="center" hgap="10" vgap="10">
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            text="Welcome to StarMade"/>

        <TextField
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            promptText="username" />
        <PasswordField
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            promptText="password" />

        <HBox
            GridPane.columnIndex="0"
            GridPane.rowIndex="3">

            <Button text="login" />
            <Button text="register" />
        </HBox>
    </GridPane>
</GridPane>